// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
}

model Feedback {
  id      String  @id @default(nanoid(11))
  review  Int
  message String
  email   String?
  userId  String?
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =============================================================================
// Circuit Simulator Models
// =============================================================================

model Circuit {
  id             String       @id @default(nanoid(11))
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Circuit structure stored as JSON
  nodesJson       String @db.Text // Array of CircuitNode
  linksJson       String @db.Text // Array of CircuitLink
  statesJson      String @db.Text // Array of ControlState
  sourceNodeId    String
  neutralNodeId   String
  receptorNodeIds String @db.Text // Array of receptor node IDs

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  simulations CircuitSimulation[]

  @@index([organizationId])
  @@map("circuit")
}

model CircuitSimulation {
  id        String  @id @default(nanoid(11))
  circuitId String
  circuit   Circuit @relation(fields: [circuitId], references: [id], onDelete: Cascade)

  statesJson  String @db.Text // States at simulation time
  resultsJson String @db.Text // Simulation results

  createdAt DateTime @default(now())

  @@index([circuitId])
  @@map("circuit_simulation")
}
